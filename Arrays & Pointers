//Arrays & Pointers
#include<iostream>
using namespace std;
int main()
	{
		int arr[5];
		int *p;
		p=arr;
		cout<<"Enter elements : ";
		for(int i=0;i<5;i++)
			{
				cin>>arr[i];
			
			}
		cout<<"You entered : ";
		for(int j=0;j<5;j++)
			{
				cout<<*p<<endl;
				p++;
				}	
			
		return 0;	
	}
